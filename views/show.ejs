<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<link rel="stylesheet" href="/css/style.css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<body>
    
<h1>Display a particular products</h1>

<%-include('./flash')%>
<section class="row">
<div class="col-6 border" > 
    <h1><%=foundProducts.name %></h1>
    <img src="<%=foundProducts.img %>" alt="">
    <h3><%=foundProducts.price %></h3>
    <p><%=foundProducts.desc %></p>
</div>

<div class="6">
    <h1 id="rating">Rating form</h1>
    <form action="/products/<%=foundProducts._id%>/rating" method="post">
        <label for="star" id="sta">Rating</label>
<!-- <input type="range" min="0" max="5" name="rating" id="star"> <br> -->
<fieldset class="starability-basic">
    <legend>First rating:</legend>
    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
    <input type="radio" id="first-rate1" name="rating" value="1" />
    <label for="first-rate1" title="Terrible">1 star</label>
    <input type="radio" id="first-rate2" name="rating" value="2" />
    <label for="first-rate2" title="Not good">2 stars</label>
    <input type="radio" id="first-rate3" name="rating" value="3" />
    <label for="first-rate3" title="Average">3 stars</label>
    <input type="radio" id="first-rate4" name="rating" value="4" />
    <label for="first-rate4" title="Very good">4 stars</label>
    <input type="radio" id="first-rate5" name="rating" value="5" />
    <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>

<label for="textt" id="rat">comment</label>
<textarea name="comment" id="textt" cols="30" rows="10" ></textarea>
<br>
<button>Submit review</button>
    </form>
</div>

<div class="border">
    <%for(let review of foundProducts.reviews) {%>
        <!-- <h2>Rating : <%=review.rating%></h2> -->
        <p class="starability-result" data-rating="<%=review.rating%>">
            Rated: <%=review.rating%> stars
          </p>
        <h5> Comments: <%=review.comment%></h5>
        <% if(review.createdAt){  %>
            <h3>Time:<%=review.createdAt.toDateString()%></h3>
       <% } %>

        <% } %>
        
</div>
</section>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>